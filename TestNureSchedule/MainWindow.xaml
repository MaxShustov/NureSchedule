<Window x:Class="TestNureSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1600" Width="1600">
    <Grid x:Name="grid">
        <ComboBox x:Name="facultyComboBox" HorizontalAlignment="Right" Margin="0,16,10,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="yearComboBox" HorizontalAlignment="Right" Margin="0,43,10,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="directionComboBox" HorizontalAlignment="Right" Margin="0,70,10,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="groupComboBox" HorizontalAlignment="Right" Margin="0,97,10,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="acceptButton" Content="Accept" HorizontalAlignment="Right" Margin="0,124,10,0" VerticalAlignment="Top" Width="120" Click="acceptButton_Click"/>

    </Grid>
</Window>
