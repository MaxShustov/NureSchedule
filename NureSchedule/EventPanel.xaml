<UserControl x:Class="NureSchedule.EventPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="50" Width="100">
    <Grid x:Name="grid" Width="100" Height="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="24"></RowDefinition>
            <RowDefinition Height="*" MinHeight="14"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="subject" TextAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="auditory" Grid.Row="1" HorizontalAlignment="Center" Width="auto" TextAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
