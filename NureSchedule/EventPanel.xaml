<UserControl x:Class="NureSchedule.EventPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid x:Name="grid" Width="auto" Height="50" MinWidth="150">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="24"></RowDefinition>
            <RowDefinition Height="*" MinHeight="14"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto" MinWidth="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="subject" TextAlignment="Center" Grid.Column="1" HorizontalAlignment="Center"/>
        <TextBlock x:Name="auditory" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Width="auto" TextAlignment="Center"></TextBlock>
        <TextBlock x:Name="startTime" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto" TextAlignment="Center"></TextBlock>
        <TextBlock x:Name="endTime" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Bottom" Width="auto" TextAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
